<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD - Proyecto Seguridad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .container { max-width: 800px; margin-top: 50px; }
        .card { box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
        .alert-floating { margin-bottom: 20px; }
    </style>
</head>
<body>

<div class="container">
    <% if (typeof mensaje !== 'undefined' && mensaje) { %>
        <div class="alert alert-success alert-dismissible fade show alert-floating" role="alert">
            <strong>¡Logrado!</strong> <%= mensaje %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="card p-4">
        <h2 class="text-center mb-4">Registros</h2>

        <form action="/add" method="POST" class="mb-5">
            <label class="form-label fw-bold">Nuevo Registro:</label>
            <div class="input-group">
                <input type="text" name="dato" class="form-control" placeholder="Escribe un dato..." required>
                <button class="btn btn-primary" type="submit">Guardar</button>
            </div>
        </form>

        <hr>

        <table class="table table-hover mt-3">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Dato Guardado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% registros.forEach(reg => { %>
                    <tr>
                        <td><%= reg.id %></td>
                        <td><%= reg.dato %></td> 
                        <td class="text-center">
                            <button class="btn btn-warning btn-sm" 
                                    onclick="prepararEdicion('<%= reg.id %>', '<%= reg.dato %>')" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#editModal">
                                Editar
                            </button>

                            <button class="btn btn-danger btn-sm" 
                                    onclick="prepararEliminacion('<%= reg.id %>')" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#deleteModal">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form action="/update" method="POST" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Editar Registro</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" name="id" id="edit-id">
        <div class="mb-3">
          <label class="form-label">Dato a modificar:</label>
          <input type="text" name="dato" id="edit-dato" class="form-control" required>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-success">Actualizar Cambios</button>
      </div>
    </form>
  </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-black">
        <h5 class="modal-title">Confirmar Eliminación</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <p>¿Estás seguro de que deseas eliminar este registro?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <a id="btn-confirmar-eliminar" href="#" class="btn btn-danger">Sí, Eliminar</a>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function prepararEdicion(id, dato) {
        document.getElementById('edit-id').value = id;
        document.getElementById('edit-dato').value = dato;
    }

    function prepararEliminacion(id) {
        const btnEliminar = document.getElementById('btn-confirmar-eliminar');
        const spanId = document.getElementById('span-id-eliminar');
        
        if(spanId) spanId.innerText = id;
        btnEliminar.href = '/delete/' + id;
    }

    setTimeout(() => {
        const alert = document.querySelector('.alert');
        if (alert) {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        }
    }, 3000);
</script>

</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registros Villa - Pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body { background-color: #f8f9fa; font-family: 'Segoe UI', sans-serif; padding: 20px; }
        .card-original { background: white; border: 1px solid #ccc; border-radius: 8px; padding: 20px; max-width: 400px; margin-bottom: 30px; }
        .table-container { background: white; border-radius: 15px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); overflow: hidden; border: 1px solid #dee2e6; }
        .table thead { background-color: #1e3a8a; color: white; }
        .table th { padding: 15px; font-weight: 600; text-transform: uppercase; font-size: 0.85rem; border: none; }
        .table td { padding: 15px; vertical-align: middle; border-bottom: 1px solid #f1f5f9; }
        .dato-cell { max-width: 500px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; font-weight: 500; }
        .btn-blue-pag { background-color: #1e3a8a; color: white; border: none; }
    </style>
</head>
<body>

<div class="container-fluid">
    <div class="card-original shadow-sm">
        <h4 class="text-center mb-4">Registros</h4>
        <form action="/add" method="POST">
            <label class="form-label small fw-bold">Nuevo Registro:</label>
            <div class="input-group">
                <input type="text" name="dato" class="form-control" placeholder="Escribe un dato..." required maxlength="100">
                <button class="btn btn-primary" type="submit">Guardar</button>
            </div>
        </form>
    </div>

    <div class="table-container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="width: 15%">ID</th>
                    <th style="width: 65%">DATO GUARDADO</th>
                    <th style="width: 20%" class="text-center">ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                <% registros.forEach(reg => { %>
                    <tr>
                        <td class="text-muted small">#<%= reg.id %></td>
                        <td class="dato-cell"><%= reg.dato %></td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-3">
                                <i class="bi bi-pencil-square text-warning fs-5" style="cursor:pointer" 
                                   onclick="abrirModalEditar('<%= reg.id %>', '<%= reg.dato %>')"></i>
                                <i class="bi bi-trash3-fill text-danger fs-5" style="cursor:pointer" 
                                   onclick="abrirModalEliminar('<%= reg.id %>')"></i>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>


<div class="modal fade" id="modalEditar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Editar Registro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/update" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="id" id="editId">
                    <label class="form-label fw-bold">Dato actual:</label>
                    <input type="text" name="dato" id="editDato" class="form-control" required maxlength="100">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning fw-bold">Actualizar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                <p class="mt-3 fw-bold">¿Estás seguro de que deseas eliminar este registro?<br>Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, cancelar</button>
                <a id="confirmarBorradoBtn" href="#" class="btn btn-danger fw-bold">Sí, eliminar</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const modalEditar = new bootstrap.Modal(document.getElementById('modalEditar'));
    const modalEliminar = new bootstrap.Modal(document.getElementById('modalEliminar'));

    function abrirModalEditar(id, dato) {
        document.getElementById('editId').value = id;
        document.getElementById('editDato').value = dato;
        modalEditar.show();
    }

    function abrirModalEliminar(id) {
        document.getElementById('confirmarBorradoBtn').href = '/delete/' + id;
        modalEliminar.show();
    }
</script>
</body>
</html>

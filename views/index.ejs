<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Villa Pro</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root { --primary: #0f172a; --accent: #3b82f6; }
        body { background-color: #f8fafc; font-family: 'Inter', sans-serif; padding: 15px; }
        .main-container { max-width: 900px; margin: 0 auto; }
        
        .card-form {
            background: white; border-radius: 16px; padding: 25px;
            margin-bottom: 30px; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
            border: 1px solid #e2e8f0;
        }

        .table-container {
            background: white; border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05); overflow: hidden;
        }

        .table thead th {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%) !important;
            color: white !important; padding: 18px !important;
            text-transform: uppercase; letter-spacing: 1px; font-size: 0.8rem; border: none;
        }

        .dato-text { 
            display: block; max-width: 180px; 
            white-space: nowrap; overflow: hidden; text-overflow: ellipsis; 
            font-weight: 600; color: #334155;
        }

        @media (min-width: 768px) { .dato-text { max-width: 500px; } }

        .btn-action { 
            width: 40px; height: 40px; display: inline-flex; align-items: center; 
            justify-content: center; border-radius: 10px; cursor: pointer; transition: 0.2s; 
        }
        .btn-edit { background: #fef3c7; color: #d97706; border: none; }
        .btn-delete { background: #fee2e2; color: #dc2626; border: none; }
        .btn-action:hover { transform: translateY(-2px); filter: brightness(0.9); }
    </style>
</head>
<body>
<div class="main-container">
    <div class="py-4">
        <h2 style="font-weight: 800; color: var(--primary)">Registros Villa</h2>
        <p class="text-muted">Protección Activa contra Inyecciones</p>
    </div>

    <div class="card-form">
        <form action="/add" method="POST">
            <div class="input-group">
                <input type="text" name="dato" class="form-control" placeholder="Escribe algo aquí..." required maxlength="100">
                <button class="btn btn-primary fw-bold" type="submit">Guardar</button>
            </div>
        </form>
    </div>

    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 15%" class="text-center">ID</th>
                        <th style="width: 60%">Dato</th>
                        <th style="width: 25%" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% registros.forEach(reg => { %>
                        <tr>
                            <td class="text-center"><span class="badge bg-light text-dark border">#<%= reg.id %></span></td>
                            <td><span class="dato-text"><%= reg.dato %></span></td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <button class="btn-action btn-edit" onclick="abrirModalEditar('<%= reg.id %>', `<%= reg.dato %>`)">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>
                                    <button class="btn-action btn-delete" onclick="abrirModalEliminar('<%= reg.id %>')">
                                        <i class="bi bi-trash3-fill"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title fw-bold">Editar Registro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/update" method="POST">
                <div class="modal-body p-4">
                    <input type="hidden" name="id" id="editId">
                    <input type="text" name="dato" id="editDato" class="form-control" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning fw-bold">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title fw-bold">¿Eliminar?</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">No</button>
                <a id="confirmarBorradoBtn" href="#" class="btn btn-danger fw-bold">Sí, borrar</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const bsModalEditar = new bootstrap.Modal(document.getElementById('modalEditar'));
    const bsModalEliminar = new bootstrap.Modal(document.getElementById('modalEliminar'));

    function abrirModalEditar(id, dato) {
        document.getElementById('editId').value = id;
        document.getElementById('editDato').value = dato;
        bsModalEditar.show();
    }

    function abrirModalEliminar(id) {
        document.getElementById('confirmarBorradoBtn').href = '/delete/' + id;
        bsModalEliminar.show();
    }
</script>
</body>
</html>
